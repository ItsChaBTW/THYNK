@{
    ViewData["Title"] = "Home";
}

<div class="hero-section vh-100 d-flex align-items-center text-white">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold mb-4">THYNK Disaster Reporting System</h1>
                <p class="lead mb-4">A community-based platform for reporting, tracking, and responding to disasters and emergencies in your area.</p>
                <div class="d-grid gap-2 d-md-flex justify-content-md-start">
                    <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-light btn-lg px-4 me-md-2">Join Now</a>
                    <a asp-controller="Home" asp-action="Privacy" class="btn btn-outline-light btn-lg px-4">Learn More</a>
                </div>
            </div>
            <div class="col-lg-6 d-none d-lg-block">
                <img src="/images/disaster-response.svg" alt="Disaster Response" class="img-fluid rounded shadow-lg" />
            </div>
        </div>
        <div class="row">
            <div class="col-12 text-center">
                <div class="scroll-indicator">
                    <a href="#features" class="text-white">
                        <div class="mt-5">
                            <p class="mb-1">Scroll to Learn More</p>
                            <i class="fas fa-chevron-down fa-2x bounce"></i>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="features" class="features-section py-5">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="fw-bold">How THYNK Works</h2>
            <p class="lead text-muted">Simple. Effective. Community-driven.</p>
        </div>
        
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon bg-primary text-white mb-4">
                            <i class="fas fa-exclamation-triangle fa-2x"></i>
                        </div>
                        <h3 class="h4 mb-3">Report Incidents</h3>
                        <p class="text-muted mb-0">Submit detailed reports about disasters or emergencies in your area with precise location tracking.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon bg-success text-white mb-4">
                            <i class="fas fa-map-marked-alt fa-2x"></i>
                        </div>
                        <h3 class="h4 mb-3">Track on Map</h3>
                        <p class="text-muted mb-0">View all reported incidents on an interactive map and track the status of emergency responses.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon bg-info text-white mb-4">
                            <i class="fas fa-book-reader fa-2x"></i>
                        </div>
                        <h3 class="h4 mb-3">Stay Informed</h3>
                        <p class="text-muted mb-0">Access educational resources and receive alerts about emerging situations in your community.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="stats-section py-5 bg-light">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-4">
                <div class="stat-card">
                    <h2 class="display-4 text-primary fw-bold">500+</h2>
                    <p class="lead">Incidents Reported</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="stat-card">
                    <h2 class="display-4 text-primary fw-bold">300+</h2>
                    <p class="lead">Communities Served</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="stat-card">
                    <h2 class="display-4 text-primary fw-bold">90%</h2>
                    <p class="lead">Resolution Rate</p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="cta-section py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card border-0 shadow">
                    <div class="card-body p-5 text-center">
                        <h2 class="mb-3">Ready to make your community safer?</h2>
                        <p class="lead mb-4">Join THYNK today and be part of the community-based disaster response network.</p>
                        <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary btn-lg px-5">Sign Up Now</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        html {
            scroll-behavior: smooth;
        }
        
        .hero-section {
            position: relative;
            background: linear-gradient(135deg, #0d6efd 0%, #0a58ca 100%);
            overflow: hidden;
            min-height: 100vh;
        }
        
        .feature-icon {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            display: inline-flex;
            align-items: center;
            justify-content: center;
        }
        
        .stat-card {
            padding: 2rem;
            transition: transform 0.3s ease;
        }
        
        .stat-card:hover {
            transform: translateY(-10px);
        }
        
        .cta-section {
            background-color: #f8f9fa;
        }
        
        .scroll-indicator {
            position: absolute;
            bottom: 30px;
            left: 0;
            right: 0;
            text-align: center;
        }
        
        .scroll-indicator a {
            text-decoration: none;
        }
        
        .bounce {
            animation: bounce 2s infinite;
        }
        
        @@keyframes bounce {
            0%, 20%, 50%, 80%, 100% {
                transform: translateY(0);
            }
            40% {
                transform: translateY(-20px);
            }
            60% {
                transform: translateY(-10px);
            }
        }
    </style>
}
