@{
    ViewData["Title"] = "Select User Type";
}

<section class="user-type-selection position-relative overflow-hidden" style="margin-top: 4rem; background-color:#E5DFD2;">
    <div class="parallax-bg"></div>
    <div class="hero-overlay"></div>
    <div class="hero-particles"></div>
    
    <div class="container position-relative">
        <div class="row min-vh-100 align-items-center">
            <div class="col-lg-10 mx-auto">
                <div class="user-type-content text-white">
                    <div class="section-tag animate-float text-center mb-2">
                        <i class="fas fa-user-shield me-2"></i>
                        <span>User Registration</span>
                    </div>
                    <h2 class="section-title text-center mb-3 animate-fade-delay">Choose Your <span class="gradient-text">Path</span></h2>
                    <p class="section-subtitle text-center mb-4 animate-fade-delay-2 mx-auto" style="max-width: 700px;">
                        Select the account type that best fits your role in the disaster response network
                    </p>
                    
                    <div class="row justify-content-center g-4 mt-2 animate-fade-delay-3">
                        <div class="col-md-6">
                            <div class="account-card community-card">
                                <div class="account-card-inner">
                                    <div class="card-icon">
                                        <i class="fas fa-users"></i>
                                    </div>
                                    <h3 class="card-title">Community User</h3>
                                    <p class="card-description">Register as a community member to report emergencies, access resources, and stay connected during disasters.</p>
                                    
                                    <div class="features-list">
                                        <div class="feature-item">
                                            <i class="fas fa-file-alt"></i>
                                            <span>Report emergencies and incidents</span>
                                        </div>
                                        <div class="feature-item">
                                            <i class="fas fa-book-open"></i>
                                            <span>Access educational resources</span>
                                        </div>
                                        <div class="feature-item">
                                            <i class="fas fa-bell"></i>
                                            <span>Receive alerts and notifications</span>
                                        </div>
                                    </div>
                                    
                                    <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary btn-lg mt-3 w-100 card-btn">
                                        <span>Register as Community User</span>
                                        <i class="fas fa-chevron-right ms-2"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="account-card lgu-card">
                                <div class="account-card-inner">
                                    <div class="card-icon">
                                        <i class="fas fa-city"></i>
                                    </div>
                                    <h3 class="card-title">LGU User</h3>
                                    <p class="card-description">Register as a Local Government Unit representative to coordinate response efforts and manage resources.</p>
                                    
                                    <div class="features-list">
                                        <div class="feature-item">
                                            <i class="fas fa-tasks"></i>
                                            <span>Coordinate emergency response</span>
                                        </div>
                                        <div class="feature-item">
                                            <i class="fas fa-hands-helping"></i>
                                            <span>Manage community resources</span>
                                        </div>
                                        <div class="feature-item">
                                            <i class="fas fa-broadcast-tower"></i>
                                            <span>Dispatch alerts to affected areas</span>
                                        </div>
                                    </div>
                                    
                                    <a asp-area="Identity" asp-page="/Account/RegisterLGU" class="btn btn-primary btn-lg mt-3 w-100 card-btn">
                                        <span>Register as LGU User</span>
                                        <i class="fas fa-chevron-right ms-2"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row justify-content-center mt-4">
                        <div class="col-lg-6 text-center animate-fade-delay-4">
                            <p class="login-text">Already have an account? <a asp-area="Identity" asp-page="/Account/Login" class="login-link">Sign in to your account</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Styles {
    <style>
        :root {
            /* Matching color palette from Index.cshtml */
            --primary: #545454;
            --primary-dark: #3c3c3c;
            --primary-light: #6e6e6e;
            --primary-rgb: 84, 84, 84;
            
            --secondary: #E5DFD2;
            --secondary-dark: #d6cfbf;
            --secondary-light: #f4f0e5;
            --secondary-rgb: 229, 223, 210;
            
            --accent: #F5F5F5;
            --accent-rgb: 245, 245, 245;
            
            --success: #6a8d73;
            --warning: #e0a458;
            --danger: #b56357;
            --danger-rgb: 181, 99, 87;
            
            --dark: #545454;
            --dark-alt: #696969;
            --dark-light: #7e7e7e;
            --light: #F5F5F5;
            --muted: #a0a0a0;
            --body-bg: #E5DFD2;
            --body-color: #545454;
            --border-color: rgba(84,84,84,0.1);
            --card-bg: #F5F5F5;
            
            --font-head: 'Poppins', sans-serif;
            --font-body: 'Inter', sans-serif;
            
            --shadow-sm: 0 4px 6px -1px rgba(0, 0, 0, 0.05), 0 2px 4px -2px rgba(0, 0, 0, 0.05);
            --shadow-md: 0 10px 15px -3px rgba(0, 0, 0, 0.05), 0 4px 6px -4px rgba(0, 0, 0, 0.05);
            --shadow-lg: 0 20px 25px -5px rgba(0, 0, 0, 0.05), 0 8px 10px -6px rgba(0, 0, 0, 0.05);
            --shadow-primary: 0 10px 20px -5px rgba(84, 84, 84, 0.15);
        }
        
        /* Base styles */
        .user-type-selection {
            min-height: 100vh;
            position: relative;
            color: var(--primary);
            overflow: hidden;
            z-index: 1;
            width: 100%;
            margin-top: -76px; /* Offset the navbar height */
        }
        
        .user-type-content {
            padding-top: 76px; /* Add space equal to navbar height */
            color: var(--primary) !important;
        }
        
        .parallax-bg {
            position: absolute;
            inset: 0;
            z-index: -1;
            background-image: url('https://images.unsplash.com/photo-1543269865-cbf427effbad?q=80&w=1000');
            background-size: cover;
            background-position: center;
            filter: grayscale(100%) brightness(0.9) opacity(0.15);
            transform: scale(1.1);
        }
        
        .hero-overlay {
            position: absolute;
            inset: 0;
            z-index: -1;
            background-color: transparent;
        }

        .hero-particles {
            position: absolute;
            inset: 0;
            z-index: 0;
            background-image: url("data:image/svg+xml,%3Csvg width='100' height='100' viewBox='0 0 100 100' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M11 18c3.866 0 7-3.134 7-7s-3.134-7-7-7-7 3.134-7 7 3.134 7 7 7zm48 25c3.866 0 7-3.134 7-7s-3.134-7-7-7-7 3.134-7 7 3.134 7 7 7zm-43-7c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zm63 31c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zM34 90c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zm56-76c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zM12 86c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm28-65c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm23-11c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm-6 60c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm29 22c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zM32 63c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm57-13c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm-9-21c1.105 0 2-0.895 2-2s-0.895-2-2-2-2 0.895-2 2 0.895 2 2 2zm60 91c1.105 0 2-0.895 2-2s-0.895-2-2-2-2 0.895-2 2 0.895 2 2 2zM35 41c1.105 0 2-0.895 2-2s-0.895-2-2-2-2 0.895-2 2 0.895 2 2 2zm12 60c1.105 0 2-0.895 2-2s-0.895-2-2-2-2 0.895-2 2 0.895 2 2 2zM12 60c1.105 0 2-0.895 2-2s-0.895-2-2-2-2 0.895-2 2 0.895 2 2 2z' fill='%23545454' fill-opacity='0.05' fill-rule='evenodd'/%3E%3C/svg%3E");
            opacity: 0.3;
        }
        
        .container {
            position: relative;
            z-index: 2;
        }
        
        .min-vh-100 {
            min-height: 100vh !important;
        }
        
        .section-tag {
            display: inline-flex;
            align-items: center;
            padding: 0.5rem 1.25rem;
            border-radius: 9999px;
            font-size: 0.875rem;
            font-weight: 600;
            background-color: rgba(84, 84, 84, 0.1);
            color: var(--primary);
            box-shadow: var(--shadow-sm);
        }
        
        .section-title {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 1rem;
            letter-spacing: -0.025em;
            color: var(--primary);
            font-family: var(--font-head);
        }
        
        .gradient-text {
            background: linear-gradient(90deg, var(--primary) 0%, var(--dark-alt) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            display: inline-block;
            position: relative;
            z-index: 10;
        }
        
        .section-subtitle {
            font-size: 1.125rem;
            line-height: 1.625;
            color: var(--dark-alt);
        }
        
        .account-card {
            background-color: var(--accent);
            border-radius: 1.25rem;
            height: 100%;
            transition: all 0.3s ease;
            box-shadow: var(--shadow-md);
            z-index: 10;
            border: 1px solid var(--border-color);
            position: relative;
            overflow: hidden;
        }
        
        .community-card {
            background: linear-gradient(145deg, var(--accent) 0%, rgba(245, 245, 245, 0.9) 100%);
        }
        
        .community-card:before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 4px;
            height: 100%;
            background: var(--primary);
            border-radius: 1.25rem 0 0 1.25rem;
        }
        
        .lgu-card {
            background: linear-gradient(145deg, var(--accent) 0%, rgba(229, 223, 210, 0.4) 100%);
        }
        
        .lgu-card:before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 4px;
            height: 100%;
            background: var(--secondary-dark);
            border-radius: 1.25rem 0 0 1.25rem;
        }
        
        .account-card-inner {
            padding: 2rem;
            height: 100%;
            display: flex;
            flex-direction: column;
            position: relative;
            z-index: 2;
        }
        
        .card-icon {
            width: 4rem;
            height: 4rem;
            border-radius: 0.75rem;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.5rem;
            margin-bottom: 1.5rem;
            box-shadow: var(--shadow-primary);
            position: relative;
            overflow: hidden;
            transition: transform 0.3s ease;
        }
        
        .account-card:hover .card-icon {
            transform: scale(1.05);
        }
        
        .community-card .card-icon {
            background: var(--primary);
        }
        
        .lgu-card .card-icon {
            background: var(--secondary-dark);
            color: var(--primary);
        }
        
        .card-title {
            font-size: 1.75rem;
            font-weight: 700;
            margin-bottom: 0.75rem;
            letter-spacing: -0.025em;
            position: relative;
            display: inline-block;
            color: var(--primary);
            padding-bottom: 0.5rem;
        }
        
        .card-title:after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 40px;
            height: 3px;
            border-radius: 3px;
            transition: width 0.4s ease;
        }
        
        .community-card .card-title:after {
            background: var(--primary);
        }
        
        .lgu-card .card-title:after {
            background: var(--secondary-dark);
        }
        
        .account-card:hover .card-title:after {
            width: 100%;
        }
        
        .card-description {
            font-size: 1rem;
            line-height: 1.5;
            margin-bottom: 1.5rem;
            color: var(--dark-alt);
        }
        
        .features-list {
            margin-bottom: 1.5rem;
            flex-grow: 1;
            display: flex;
            flex-direction: column;
            gap: 0.75rem;
        }
        
        .feature-item {
            display: flex;
            align-items: center;
            color: var(--dark-alt);
            font-size: 0.95rem;
            padding: 0.5rem 0.75rem;
            border-radius: 0.5rem;
            transition: transform 0.3s ease;
        }
        
        .account-card:hover .feature-item {
            transform: translateX(5px);
        }
        
        .community-card .feature-item {
            background: rgba(84, 84, 84, 0.05);
        }
        
        .lgu-card .feature-item {
            background: rgba(229, 223, 210, 0.3);
        }
        
        .community-card .feature-item i {
            color: var(--primary);
        }
        
        .lgu-card .feature-item i {
            color: var(--secondary-dark);
        }
        
        .feature-item i {
            margin-right: 0.75rem;
            font-size: 0.875rem;
            width: 1.25rem;
            height: 1.25rem;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.5);
            box-shadow: var(--shadow-sm);
        }
        
        .btn-primary {
            font-weight: 600;
            padding: 0.75rem 1.25rem;
            border-radius: 0.5rem;
            color: white;
            transition: all 0.3s ease;
            border: none;
            position: relative;
            overflow: hidden;
        }
        
        .btn-primary:hover {
            transform: translateY(-2px);
        }
        
        .community-card .btn-primary {
            background: var(--primary);
            box-shadow: 0 4px 10px rgba(84, 84, 84, 0.2);
        }
        
        .lgu-card .btn-primary {
            background: var(--secondary-dark);
            color: var(--primary);
            box-shadow: 0 4px 10px rgba(214, 207, 191, 0.4);
        }
        
        /* Added hover effect for anchor buttons */
        .card-btn {
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }
        
        .card-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 15px rgba(0, 0, 0, 0.1);
        }
        
        .community-card .card-btn:hover {
            background-color: var(--primary-dark);
        }
        
        .lgu-card .card-btn:hover {
            background-color: var(--secondary);
        }
        
        .card-btn i {
            transition: transform 0.3s ease;
        }
        
        .card-btn:hover i {
            transform: translateX(3px);
        }
        
        .login-text {
            font-size: 1rem;
            color: var(--dark-alt);
        }
        
        .login-link {
            font-weight: 600;
            position: relative;
            transition: all 0.25s ease;
            text-decoration: none;
            color: var(--primary);
            position: relative;
            padding: 0 2px;
        }
        
        .login-link:before {
            content: '';
            position: absolute;
            left: 0;
            right: 0;
            bottom: -2px;
            height: 1px;
            background: var(--primary);
            transform: scaleX(0);
            transform-origin: center;
            transition: transform 0.3s ease;
        }
        
        .login-link:hover {
            color: var(--primary-dark);
        }
        
        .login-link:hover:before {
            transform: scaleX(1);
        }
        
        /* Animations */
        .animate-fade {
            opacity: 0;
            animation: fade-in 0.8s ease forwards;
        }
        
        .animate-fade-delay {
            opacity: 0;
            animation: fade-in 0.8s ease 0.2s forwards;
        }
        
        .animate-fade-delay-2 {
            opacity: 0;
            animation: fade-in 0.8s ease 0.4s forwards;
        }
        
        .animate-fade-delay-3 {
            opacity: 0;
            animation: fade-in 0.8s ease 0.6s forwards;
        }
        
        .animate-fade-delay-4 {
            opacity: 0;
            animation: fade-in 0.8s ease 0.8s forwards;
        }
        
        .animate-float {
            animation: float 3s ease-in-out infinite;
        }
        
        @@keyframes float {
            0% {
                transform: translateY(0);
            }
            50% {
                transform: translateY(-5px);
            }
            100% {
                transform: translateY(0);
            }
        }
        
        @@keyframes fade-in {
            from { 
                opacity: 0;
                transform: translateY(15px);
            }
            to { 
                opacity: 1;
                transform: translateY(0);
            }
        }
        
        /* Media queries */
        @@media (max-width: 991px) {
            .user-type-selection {
                margin-top: -65px; /* For smaller navbar on tablets */
            }
            
            .user-type-content {
                padding-top: 65px; /* For smaller navbar on tablets */
            }
            
            .section-title {
                font-size: 2rem;
            }
            
            .account-card-inner {
                padding: 1.75rem;
            }
            
            .card-title {
                font-size: 1.5rem;
            }
        }
        
        @@media (max-width: 767px) {
            .section-title {
                font-size: 1.75rem;
            }
            
            .card-icon {
                width: 3.5rem;
                height: 3.5rem;
                font-size: 1.25rem;
                margin-bottom: 1.25rem;
            }
            
            .card-title {
                font-size: 1.5rem;
            }
            
            .card-description {
                font-size: 0.95rem;
            }
            
            .feature-item {
                font-size: 0.875rem;
            }
        }
    </style>
}

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Subtle parallax effect
            const parallaxBg = document.querySelector('.parallax-bg');
            const section = document.querySelector('.user-type-selection');
            
            if (parallaxBg) {
                window.addEventListener('scroll', function() {
                    const scrollPosition = window.pageYOffset;
                    const sectionTop = section.offsetTop;
                    const relativeScroll = scrollPosition - sectionTop;
                    
                    if (relativeScroll >= 0) {
                        parallaxBg.style.transform = `scale(1.1) translateY(${relativeScroll * 0.03}px)`;
                    }
                });
            }
        });
    </script>
}

