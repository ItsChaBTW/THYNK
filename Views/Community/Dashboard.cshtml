@{
    ViewData["Title"] = "Dashboard";
    Layout = "_CommunityLayout";
}

<div class="row">
    <!-- Quick Actions -->
    <div class="col-12 mb-4">
        <div class="card dashboard-card border-0 bg-light">
            <div class="card-body">
                <h5 class="card-title mb-3">Quick Actions</h5>
                <div class="row g-3">
                    <div class="col-md-4">
                        <a href="@Url.Action("SubmitReport", "Community")" class="btn btn-danger w-100 py-3">
                            <i class="fas fa-exclamation-triangle me-2"></i> Report Incident
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a href="@Url.Action("PostUpdate", "Community")" class="btn btn-primary w-100 py-3">
                            <i class="fas fa-comment me-2"></i> Post Update
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a href="@Url.Action("Support", "Community")" class="btn btn-info text-white w-100 py-3">
                            <i class="fas fa-headset me-2"></i> Get Support
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Active Alerts -->
    <div class="col-12 mb-4">
        <div class="card dashboard-card">
            <div class="card-header bg-danger text-white">
                <div class="d-flex align-items-center">
                    <div class="card-icon bg-white text-danger">
                        <i class="fas fa-bell"></i>
                    </div>
                    <div>
                        <h5 class="m-0">Active Alerts</h5>
                        <small>Important safety information for your area</small>
                    </div>
                </div>
            </div>
            <div class="card-body">
                @if (ViewBag.ActiveAlerts != null && ViewBag.ActiveAlerts.Count > 0)
                {
                    <div class="list-group">
                        @foreach (var alert in ViewBag.ActiveAlerts)
                        {
                            <div class="list-group-item list-group-item-action">
                                <div class="d-flex w-100 justify-content-between">
                                    <h5 class="mb-1">
                                        <span class="alert-badge @(alert.Severity == AlertSeverity.Critical ? "alert-critical" : 
                                                                    alert.Severity == AlertSeverity.Danger ? "alert-danger" : 
                                                                    alert.Severity == AlertSeverity.Warning ? "alert-warning" : "alert-info")"></span>
                                        @alert.Title
                                    </h5>
                                    <small>@alert.DateIssued.ToString("MMM dd, HH:mm")</small>
                                </div>
                                <p class="mb-1">@alert.Message</p>
                                <small>@alert.AffectedArea</small>
                            </div>
                        }
                    </div>
                    <div class="mt-3">
                        <a href="@Url.Action("Alerts", "Community")" class="btn btn-outline-danger">View All Alerts</a>
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="fas fa-check-circle text-success fa-4x mb-3"></i>
                        <p>No active alerts for your area at this time.</p>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Recent Reports & Community Updates -->
    <div class="col-md-6 mb-4">
        <div class="card dashboard-card h-100">
            <div class="card-header bg-primary text-white">
                <div class="d-flex align-items-center">
                    <div class="card-icon bg-white text-primary">
                        <i class="fas fa-exclamation-circle"></i>
                    </div>
                    <div>
                        <h5 class="m-0">Recent Reports</h5>
                        <small>Latest incidents reported in your area</small>
                    </div>
                </div>
            </div>
            <div class="card-body">
                @if (ViewBag.RecentReports != null && ViewBag.RecentReports.Count > 0)
                {
                    <div class="list-group">
                        @foreach (var report in ViewBag.RecentReports)
                        {
                            <a href="@Url.Action("ReportDetails", "Community", new { id = report.Id })" class="list-group-item list-group-item-action">
                                <div class="d-flex w-100 justify-content-between">
                                    <h5 class="mb-1">@report.Title</h5>
                                    <small>@report.DateReported.ToString("MMM dd, HH:mm")</small>
                                </div>
                                <p class="mb-1 text-truncate">@report.Description</p>
                                <small>
                                    <span class="badge bg-secondary">@report.Type</span>
                                    <span class="badge @(report.Severity == SeverityLevel.Low ? "bg-info" : 
                                                         report.Severity == SeverityLevel.Medium ? "bg-warning" : 
                                                         report.Severity == SeverityLevel.High ? "bg-danger" : "bg-dark")">
                                        @report.Severity
                                    </span>
                                    <span class="badge @(report.Status == ReportStatus.Pending ? "bg-warning" : 
                                                        report.Status == ReportStatus.Verified ? "bg-info" : 
                                                        report.Status == ReportStatus.InProgress ? "bg-primary" : 
                                                        report.Status == ReportStatus.Resolved ? "bg-success" : "bg-secondary")">
                                        @report.Status
                                    </span>
                                </small>
                            </a>
                        }
                    </div>
                    <div class="mt-3">
                        <a href="@Url.Action("IncidentMap", "Community")" class="btn btn-outline-primary">View Incident Map</a>
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="fas fa-clipboard-check text-success fa-4x mb-3"></i>
                        <p>No recent reports in your area.</p>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="col-md-6 mb-4">
        <div class="card dashboard-card h-100">
            <div class="card-header bg-success text-white">
                <div class="d-flex align-items-center">
                    <div class="card-icon bg-white text-success">
                        <i class="fas fa-users"></i>
                    </div>
                    <div>
                        <h5 class="m-0">Community Updates</h5>
                        <small>Latest updates from your community</small>
                    </div>
                </div>
            </div>
            <div class="card-body">
                @if (ViewBag.CommunityUpdates != null && ViewBag.CommunityUpdates.Count > 0)
                {
                    <div class="list-group">
                        @foreach (var update in ViewBag.CommunityUpdates)
                        {
                            <div class="list-group-item">
                                <div class="d-flex w-100 justify-content-between">
                                    <h5 class="mb-1">
                                        <span class="badge @(update.Type == UpdateType.HelpRequest ? "bg-danger" : 
                                                            update.Type == UpdateType.StatusUpdate ? "bg-info" : 
                                                            update.Type == UpdateType.ResourceSharing ? "bg-success" : 
                                                            update.Type == UpdateType.Information ? "bg-primary" : "bg-secondary")">
                                            @update.Type
                                        </span>
                                    </h5>
                                    <small>@update.DatePosted.ToString("MMM dd, HH:mm")</small>
                                </div>
                                <p class="mb-1">@update.Content</p>
                                <small>Posted by @update.User.UserName</small>
                            </div>
                        }
                    </div>
                    <div class="mt-3">
                        <a href="@Url.Action("CommunityFeed", "Community")" class="btn btn-outline-success">View Community Feed</a>
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="fas fa-comments text-muted fa-4x mb-3"></i>
                        <p>No community updates available.</p>
                        <a href="@Url.Action("PostUpdate", "Community")" class="btn btn-success">Be the First to Post</a>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Educational Resources -->
    <div class="col-12">
        <div class="card dashboard-card">
            <div class="card-header bg-info text-white">
                <div class="d-flex align-items-center">
                    <div class="card-icon bg-white text-info">
                        <i class="fas fa-book"></i>
                    </div>
                    <div>
                        <h5 class="m-0">Educational Resources</h5>
                        <small>Learn how to prepare for and respond to emergencies</small>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <div class="card h-100">
                            <div class="card-body text-center">
                                <i class="fas fa-fire text-danger fa-3x mb-3"></i>
                                <h5>Fire Safety</h5>
                                <p class="small">Learn fire prevention and emergency response</p>
                                <a href="@Url.Action("EducationalResources", "Community")" class="btn btn-sm btn-outline-danger">Learn More</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="card h-100">
                            <div class="card-body text-center">
                                <i class="fas fa-water text-primary fa-3x mb-3"></i>
                                <h5>Flood Preparedness</h5>
                                <p class="small">Steps to take before, during and after floods</p>
                                <a href="@Url.Action("EducationalResources", "Community")" class="btn btn-sm btn-outline-primary">Learn More</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="card h-100">
                            <div class="card-body text-center">
                                <i class="fas fa-first-aid text-success fa-3x mb-3"></i>
                                <h5>First Aid Basics</h5>
                                <p class="small">Essential first aid skills for emergencies</p>
                                <a href="@Url.Action("EducationalResources", "Community")" class="btn btn-sm btn-outline-success">Learn More</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="text-center mt-3">
                    <a href="@Url.Action("EducationalResources", "Community")" class="btn btn-outline-info">Browse All Resources</a>
                </div>
            </div>
        </div>
    </div>
</div> 