@model IEnumerable<THYNK.Models.DisasterReport>
@{
    ViewData["Title"] = "LGU Alerts";
    Layout = "_CommunityLayout";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-white py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="fas fa-bell me-2 text-warning"></i>
                            LGU Alerts
                        </h5>
                        <div class="btn-group">
                            <button type="button" class="btn btn-outline-secondary btn-sm dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-filter me-1"></i> Filter
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="@Url.Action("Alerts", new { severity = "Critical" })">Critical</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Alerts", new { severity = "High" })">High</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Alerts", new { severity = "Medium" })">Medium</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Alerts", new { severity = "Low" })">Low</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="@Url.Action("Alerts")">All Alerts</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="card-body p-0">
                    @if (!Model.Any())
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-bell-slash fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No alerts at the moment</h5>
                            <p class="text-muted">Check back later for updates from your local government</p>
                        </div>
                    }
                    else
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var alert in Model)
                            {
                                <div class="list-group-item">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div class="ms-2 me-auto">
                                            <div class="d-flex align-items-center mb-1">
                                                <h6 class="mb-0">@alert.Title</h6>
                                                <span class="badge @(alert.Severity == THYNK.Models.SeverityLevel.Low ? "bg-info" : 
                                                              alert.Severity == THYNK.Models.SeverityLevel.Medium ? "bg-warning" : 
                                                              alert.Severity == THYNK.Models.SeverityLevel.High ? "bg-danger" : "bg-dark") ms-2">
                                                    @alert.Severity
                                                </span>
                                            </div>
                                            <p class="text-muted small mb-1">
                                                <i class="fas fa-map-marker-alt me-1"></i>
                                                @alert.Purok, @alert.Barangay, @alert.City
                                            </p>
                                            <p class="text-muted small mb-0">
                                                <i class="fas fa-clock me-1"></i>
                                                @alert.DateReported.ToString("MMM dd, yyyy hh:mm tt")
                                            </p>
                                        </div>
                                        <a href="@Url.Action("ReportDetails", new { id = alert.Id })" class="btn btn-outline-primary btn-sm">
                                            <i class="fas fa-eye me-1"></i> View Details
                                        </a>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Prevent modal from showing up
        $(document).ready(function() {
            $('.modal').modal('hide');
            $('body').removeClass('modal-open');
            $('.modal-backdrop').remove();
        });
    </script>
} 