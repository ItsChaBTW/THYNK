        <div class="stats-box">
            <div class="stats-icon bg-warning text-white">
                <i class="fas fa-user-shield"></i>
            </div>
            <div class="stats-number" id="pendingLGUCount">@ViewBag.PendingLGUCount</div>
            <div class="stats-label">Pending LGU Applications</div>
            <a href="@Url.Action("PendingLGUApplications", "Admin")" class="btn btn-sm btn-link p-0 mt-2">View Details <i class="fas fa-arrow-right ms-1"></i></a>
        </div>
    </div>
    
