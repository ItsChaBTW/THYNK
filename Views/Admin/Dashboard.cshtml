            </div>
            <div class="stats-number" id="pendingPostsCount">@ViewBag.PendingPostsCount</div>
            <div class="stats-label">Pending Posts</div>
            <a href="@Url.Action("PendingPosts", "Admin")" class="btn btn-sm btn-link p-0 mt-2">View Details <i class="fas fa-arrow-right ms-1"></i></a>
        </div>
    </div>
    
