        /* FAQ Modal Styling */
        .faq-chat-container {
            display: flex;
            flex-direction: column;
            height: 75vh;
            max-height: 700px;
        }
        
        .faq-chat-messages {
            flex: 2;
            overflow-y: auto;
            padding: 1.5rem;
            background-color: #f8f9fa;
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }
        
        .message {
            display: flex;
            flex-direction: column;
            max-width: 85%;
        }
        
        .message-assistant {
            align-self: flex-start;
        }
        
        .message-user {
            align-self: flex-end;
        }
        
        .message-content {
