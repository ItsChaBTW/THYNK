            .modal-dialog {
                margin: 0.5rem;
            }
            
            .faq-chat-container {
                height: 85vh;
                max-height: none;
            }
            
            .category-questions {
                gap: 0.35rem;
            }
            
            .question-chip {
                padding: 0.4rem 0.8rem;
                font-size: 0.75rem;
            }
            
            .message {
                max-width: 90%;
            }
