            content: '';
            position: absolute;
            left: 0;
            top: 0;
            bottom: 0;
            width: 3px;
            background: white;
            border-radius: 0 2px 2px 0;
        }
        
        .nav-icon {
            @@apply text-lg mr-3 flex items-center justify-center w-8;
            color: var(--sidebar-text);
            transition: all 0.3s ease;
        }
        
        .nav-item:hover .nav-icon {
            transform: scale(1.1);
            color: white;
        }
        
        .nav-text {
            @@apply text-sm font-medium;
        }
        
