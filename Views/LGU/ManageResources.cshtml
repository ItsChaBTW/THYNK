@model IEnumerable<THYNK.Models.EducationalResource>
@{
    ViewData["Title"] = "Manage Educational Resources";
    Layout = "_LGULayout";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Educational Resources</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/LGU/Dashboard">Dashboard</a></li>
        <li class="breadcrumb-item active">Educational Resources</li>
    </ol>
    
    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <div>
                <i class="fas fa-book-open me-1"></i>
                Your Resources
            </div>
            <a href="@Url.Action("CreateResource", "LGU")" class="btn btn-primary btn-sm">
                <i class="fas fa-plus me-1"></i> Add New Resource
            </a>
        </div>
        <div class="card-body">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            
            @if (!Model.Any())
            {
                <div class="alert alert-info text-center py-4">
                    <i class="fas fa-info-circle fa-2x mb-3"></i>
                    <h5>No Resources Found</h5>
                    <p class="mb-2">You haven't created any educational resources yet.</p>
                    <a href="@Url.Action("CreateResource", "LGU")" class="btn btn-primary">
                        <i class="fas fa-plus me-1"></i> Create Your First Resource
                    </a>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-bordered table-striped" id="resourcesTable">
                        <thead class="table-light">
                            <tr>
                                <th>Title</th>
                                <th>Type</th>
                                <th>Added On</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var resource in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="resource-icon me-2">
                                                @switch (resource.Type)
                                                {
                                                    case ResourceType.Guide:
                                                        <i class="fas fa-compass text-info"></i>
                                                        break;
                                                    case ResourceType.Tutorial:
                                                        <i class="fas fa-chalkboard-teacher text-primary"></i>
                                                        break;
                                                    case ResourceType.Infographic:
                                                        <i class="fas fa-chart-pie text-success"></i>
                                                        break;
                                                    case ResourceType.Video:
                                                        <i class="fas fa-video text-danger"></i>
                                                        break;
                                                    case ResourceType.Document:
                                                        <i class="fas fa-file-alt text-warning"></i>
                                                        break;
                                                    case ResourceType.FAQ:
                                                        <i class="fas fa-question-circle text-secondary"></i>
                                                        break;
                                                    case ResourceType.EmergencyContact:
                                                        <i class="fas fa-phone-alt text-danger"></i>
                                                        break;
                                                    default:
                                                        <i class="fas fa-file"></i>
                                                        break;
                                                }
                                            </div>
                                            <div>
                                                <a href="@Url.Action("EditResource", "LGU", new { id = resource.Id })" class="text-decoration-none fw-medium">
                                                    @resource.Title
                                                </a>
                                                @if (!string.IsNullOrEmpty(resource.Tags))
                                                {
                                                    <div class="small text-muted mt-1">
                                                        @foreach (var tag in resource.Tags.Split(',', StringSplitOptions.RemoveEmptyEntries))
                                                        {
                                                            <span class="badge bg-light text-secondary me-1">@tag.Trim()</span>
                                                        }
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    </td>
                                    <td>@resource.Type</td>
                                    <td>@resource.DateAdded.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        @switch (resource.ApprovalStatus)
                                        {
                                            case ApprovalStatus.Approved:
                                                <span class="badge bg-success">Approved</span>
                                                <div class="small text-muted mt-1">
                                                    @(resource.ApprovedDate?.ToString("MMM dd, yyyy") ?? "")
                                                </div>
                                                break;
                                            case ApprovalStatus.Pending:
                                                <span class="badge bg-warning text-dark">Pending</span>
                                                break;
                                            case ApprovalStatus.Rejected:
                                                <span class="badge bg-danger">Rejected</span>
                                                <div class="small text-muted mt-1" title="@resource.RejectionReason">
                                                    <i class="fas fa-info-circle"></i> See reason
                                                </div>
                                                break;
                                            default:
                                                <span class="badge bg-secondary">Unknown</span>
                                                break;
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="@Url.Action("EditResource", "LGU", new { id = resource.Id })" class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-edit"></i> Edit
                                            </a>
                                            <a href="@Url.Action("DeleteResource", "LGU", new { id = resource.Id })" class="btn btn-sm btn-outline-danger">
                                                <i class="fas fa-trash"></i> Delete
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
    
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-info-circle me-1"></i>
            Resource Guidelines
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h5>Content Guidelines:</h5>
                    <ul class="list-group list-group-flush mb-3">
                        <li class="list-group-item">
                            <i class="fas fa-check text-success me-2"></i>
                            Ensure content is accurate and up-to-date
                        </li>
                        <li class="list-group-item">
                            <i class="fas fa-check text-success me-2"></i>
                            Focus on educational value and clear instructions
                        </li>
                        <li class="list-group-item">
                            <i class="fas fa-check text-success me-2"></i>
                            Include visuals and examples when possible
                        </li>
                        <li class="list-group-item">
                            <i class="fas fa-times text-danger me-2"></i>
                            Avoid political statements or biased content
                        </li>
                    </ul>
                </div>
                <div class="col-md-6">
                    <h5>Approval Process:</h5>
                    <ol class="list-group list-group-flush mb-3">
                        <li class="list-group-item d-flex">
                            <div class="badge bg-primary rounded-circle me-3">1</div>
                            <div>
                                <strong>Submission:</strong> Create and submit a resource
                            </div>
                        </li>
                        <li class="list-group-item d-flex">
                            <div class="badge bg-primary rounded-circle me-3">2</div>
                            <div>
                                <strong>Review:</strong> Admin reviews for accuracy and compliance
                            </div>
                        </li>
                        <li class="list-group-item d-flex">
                            <div class="badge bg-primary rounded-circle me-3">3</div>
                            <div>
                                <strong>Approval/Rejection:</strong> Resource is approved or rejected with feedback
                            </div>
                        </li>
                        <li class="list-group-item d-flex">
                            <div class="badge bg-primary rounded-circle me-3">4</div>
                            <div>
                                <strong>Publication:</strong> Approved resources appear in the Resource Library
                            </div>
                        </li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Initialize DataTable
            $('#resourcesTable').DataTable({
                order: [[2, 'desc']], // Sort by Added On (descending)
                language: {
                    search: "_INPUT_",
                    searchPlaceholder: "Search resources..."
                }
            });
            
            // Initialize tooltips
            $('[title]').tooltip();
            
            // Show rejection reason in modal
            $('[title]').click(function(e) {
                if ($(this).attr('title')) {
                    e.preventDefault();
                    const reason = $(this).attr('title');
                    
                    // Create modal dynamically
                    const modalHtml = `
                        <div class="modal fade" id="rejectionReasonModal" tabindex="-1" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title">Rejection Reason</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="alert alert-danger">
                                            <i class="fas fa-exclamation-circle me-2"></i>
                                            ${reason}
                                        </div>
                                        <p>You can edit your resource to address these issues and resubmit for approval.</p>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    `;
                    
                    // Add modal to body if it doesn't exist
                    if ($('#rejectionReasonModal').length === 0) {
                        $('body').append(modalHtml);
                    } else {
                        // Update existing modal content
                        $('#rejectionReasonModal .alert-danger').html(`<i class="fas fa-exclamation-circle me-2"></i>${reason}`);
                    }
                    
                    // Show modal
                    new bootstrap.Modal(document.getElementById('rejectionReasonModal')).show();
                }
            });
        });
    </script>
} 