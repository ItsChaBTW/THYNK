@page
@model IndexModel
@{
    ViewData["Title"] = "Profile Settings";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3 class="text-lg font-bold text-gray-800 mb-6 flex items-center">
    <i class="fas fa-user-edit text-primary mr-2"></i> Profile Information
</h3>

<partial name="_StatusMessage" for="StatusMessage" />

<form id="profile-form" method="post" enctype="multipart/form-data" class="space-y-6">
    <div asp-validation-summary="ModelOnly" class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 rounded shadow-md mb-6" role="alert"></div>
    
    <div class="mb-8">
        <label for="ProfilePhoto" class="block text-sm font-medium text-gray-700 mb-1">Profile Photo</label>
        <div class="flex items-center">
            <div class="mr-4 w-20 h-20 rounded-full overflow-hidden bg-gray-200 flex items-center justify-center border-2 border-gray-300">
                @if (!string.IsNullOrEmpty(Model.CurrentProfilePhotoUrl))
                {
                    <img src="@Model.CurrentProfilePhotoUrl" alt="Profile Photo" class="w-full h-full object-cover" id="profile-image-preview">
                }
                else
                {
                    <i class="fas fa-user text-gray-400 text-3xl"></i>
                }
            </div>
            <label class="flex items-center justify-center px-4 py-2 border border-primary rounded-md shadow-sm text-sm font-medium text-primary bg-white hover:bg-gray-50 cursor-pointer transition-colors">
                <i class="fas fa-upload mr-2"></i> Upload Photo
                <input asp-for="Input.ProfilePhoto" type="file" accept="image/jpeg,image/png,image/gif" class="hidden" />
            </label>
        </div>
        <p class="mt-1 text-xs text-gray-500">Recommended: square image, 500x500 pixels or larger</p>
        <span asp-validation-for="Input.ProfilePhoto" class="text-red-600 text-sm"></span>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
            <div class="mb-4">
                <label asp-for="Input.FirstName" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <input asp-for="Input.FirstName" class="block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-primary focus:border-primary" />
                <span asp-validation-for="Input.FirstName" class="text-red-600 text-sm"></span>
            </div>
            
            <div class="mb-4">
                <label asp-for="Input.LastName" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <input asp-for="Input.LastName" class="block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-primary focus:border-primary" />
                <span asp-validation-for="Input.LastName" class="text-red-600 text-sm"></span>
            </div>
            
            <div class="mb-4">
                <label asp-for="Input.PhoneNumber" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <input asp-for="Input.PhoneNumber" class="block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-primary focus:border-primary" />
                <span asp-validation-for="Input.PhoneNumber" class="text-red-600 text-sm"></span>
            </div>
        </div>
        
        <div>
            <div class="mb-4">
                <label asp-for="Username" class="block text-sm font-medium text-gray-700 mb-1">Username</label>
                <input asp-for="Username" class="block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm bg-gray-50" disabled />
            </div>
            
            <div class="mb-4">
                <label asp-for="Input.Email" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <input asp-for="Input.Email" class="block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm bg-gray-50" disabled />
            </div>
            
            <div class="mb-4">
                <label asp-for="Input.Bio" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <textarea asp-for="Input.Bio" rows="4" class="block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-primary focus:border-primary"></textarea>
                <span asp-validation-for="Input.Bio" class="text-red-600 text-sm"></span>
            </div>
        </div>
    </div>
    
    <hr class="my-6 border-gray-200" />
    
    <h4 class="text-md font-medium text-gray-700 mb-4">Address Information</h4>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div>
            <label asp-for="Input.ProvinceName" class="block text-sm font-medium text-gray-700 mb-1"></label>
            <input asp-for="Input.ProvinceName" class="block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-primary focus:border-primary" />
            <span asp-validation-for="Input.ProvinceName" class="text-red-600 text-sm"></span>
        </div>
        
        <div>
            <label asp-for="Input.CityMunicipalityName" class="block text-sm font-medium text-gray-700 mb-1"></label>
            <input asp-for="Input.CityMunicipalityName" class="block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-primary focus:border-primary" />
            <span asp-validation-for="Input.CityMunicipalityName" class="text-red-600 text-sm"></span>
        </div>
        
        <div>
            <label asp-for="Input.BarangayName" class="block text-sm font-medium text-gray-700 mb-1"></label>
            <input asp-for="Input.BarangayName" class="block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-primary focus:border-primary" />
            <span asp-validation-for="Input.BarangayName" class="text-red-600 text-sm"></span>
    </div>
</div>
    
    <div class="pt-6">
        <button type="submit" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-primary hover:bg-primaryDark focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary transition-colors">
            <i class="fas fa-save mr-2"></i> Save Changes
        </button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        // Preview profile photo before upload
        document.addEventListener('DOMContentLoaded', function() {
            const fileInput = document.getElementById('Input_ProfilePhoto');
            if (fileInput) {
                fileInput.addEventListener('change', function() {
                    if (this.files && this.files[0]) {
                        const reader = new FileReader();
                        reader.onload = function(e) {
                            const previewImg = document.getElementById('profile-image-preview');
                            if (previewImg) {
                                previewImg.src = e.target.result;
                            } else {
                                const container = document.querySelector('.rounded-full');
                                container.innerHTML = '';
                                const newImg = document.createElement('img');
                                newImg.src = e.target.result;
                                newImg.id = 'profile-image-preview';
                                newImg.className = 'w-full h-full object-cover';
                                container.appendChild(newImg);
                            }
                        };
                        reader.readAsDataURL(this.files[0]);
                    }
                });
            }
        });
    </script>
}
