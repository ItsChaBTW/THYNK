@page
@model IndexModel
@{
    ViewData["Title"] = "Profile Settings";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="space-y-6">
    <div class="flex items-center justify-between">
        <h3 class="text-lg font-medium text-gray-800 flex items-center">
            <i class="fas fa-user text-primary mr-2"></i>
            <span>Profile Information</span>
</h3>
    </div>

<partial name="_StatusMessage" for="StatusMessage" />

<form id="profile-form" method="post" enctype="multipart/form-data" class="space-y-6">
        <div asp-validation-summary="ModelOnly" class="bg-red-50 border-l-4 border-red-400 p-4 rounded-md text-sm text-red-600 mb-4" role="alert"></div>
        
        <div class="bg-white rounded-lg border border-gray-200 overflow-hidden hover-lift">
            <div class="p-5 border-b border-gray-200">
                <h4 class="text-base font-medium text-gray-700">Personal Information</h4>
                <p class="mt-1 text-sm text-gray-500">Update your profile details and contact information</p>
            </div>
            <div class="p-5">
                <div class="mb-6">
                    <label for="ProfilePhoto" class="block text-sm font-medium text-gray-700 mb-2">Profile Photo</label>
        <div class="flex items-center">
                        <div class="mr-4 w-20 h-20 rounded-full overflow-hidden bg-gray-100 flex items-center justify-center border border-gray-200 shadow-sm">
                @if (!string.IsNullOrEmpty(Model.CurrentProfilePhotoUrl))
                {
                    <img src="@Model.CurrentProfilePhotoUrl" alt="Profile Photo" class="w-full h-full object-cover" id="profile-image-preview">
                }
                else
                {
                    <i class="fas fa-user text-gray-400 text-3xl"></i>
                }
            </div>
            <label class="flex items-center justify-center px-4 py-2 border border-primary rounded-md shadow-sm text-sm font-medium text-primary bg-white hover:bg-gray-50 cursor-pointer transition-colors">
                <i class="fas fa-upload mr-2"></i> Upload Photo
                <input asp-for="Input.ProfilePhoto" type="file" accept="image/jpeg,image/png,image/gif" class="hidden" />
            </label>
        </div>
        <p class="mt-1 text-xs text-gray-500">Recommended: square image, 500x500 pixels or larger</p>
        <span asp-validation-for="Input.ProfilePhoto" class="text-red-600 text-sm"></span>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
            <div class="mb-4">
                <label asp-for="Input.FirstName" class="block text-sm font-medium text-gray-700 mb-1"></label>
                            <input asp-for="Input.FirstName" class="block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-primary focus:border-primary transition-colors" />
                            <span asp-validation-for="Input.FirstName" class="text-red-600 text-sm mt-1"></span>
            </div>
            
            <div class="mb-4">
                <label asp-for="Input.LastName" class="block text-sm font-medium text-gray-700 mb-1"></label>
                            <input asp-for="Input.LastName" class="block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-primary focus:border-primary transition-colors" />
                            <span asp-validation-for="Input.LastName" class="text-red-600 text-sm mt-1"></span>
            </div>
            
            <div class="mb-4">
                <label asp-for="Input.PhoneNumber" class="block text-sm font-medium text-gray-700 mb-1"></label>
                            <input asp-for="Input.PhoneNumber" class="block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-primary focus:border-primary transition-colors" />
                            <span asp-validation-for="Input.PhoneNumber" class="text-red-600 text-sm mt-1"></span>
            </div>
        </div>
        
        <div>
            <div class="mb-4">
                <label asp-for="Username" class="block text-sm font-medium text-gray-700 mb-1">Username</label>
                            <div class="flex items-center">
                <input asp-for="Username" class="block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm bg-gray-50" disabled />
                                <div class="ml-2 text-gray-400" title="Username cannot be changed">
                                    <i class="fas fa-lock"></i>
                                </div>
                            </div>
            </div>
            
            <div class="mb-4">
                <label asp-for="Input.Email" class="block text-sm font-medium text-gray-700 mb-1"></label>
                            <div class="flex items-center">
                <input asp-for="Input.Email" class="block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm bg-gray-50" disabled />
                                <div class="ml-2 text-gray-400" title="Change email in the Email tab">
                                    <i class="fas fa-info-circle"></i>
                                </div>
                            </div>
            </div>
            
            <div class="mb-4">
                <label asp-for="Input.Bio" class="block text-sm font-medium text-gray-700 mb-1"></label>
                            <textarea asp-for="Input.Bio" rows="4" class="block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-primary focus:border-primary transition-colors"></textarea>
                            <span asp-validation-for="Input.Bio" class="text-red-600 text-sm mt-1"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="bg-white rounded-lg border border-gray-200 overflow-hidden hover-lift">
            <div class="p-5 border-b border-gray-200">
                <h4 class="text-base font-medium text-gray-700">Address Information</h4>
                <p class="mt-1 text-sm text-gray-500">Your location details help us provide location-specific disaster information</p>
    </div>
            <div class="p-5">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div>
            <label asp-for="Input.ProvinceName" class="block text-sm font-medium text-gray-700 mb-1"></label>
                        <input asp-for="Input.ProvinceName" class="block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-primary focus:border-primary transition-colors" />
                        <span asp-validation-for="Input.ProvinceName" class="text-red-600 text-sm mt-1"></span>
        </div>
        
        <div>
            <label asp-for="Input.CityMunicipalityName" class="block text-sm font-medium text-gray-700 mb-1"></label>
                        <input asp-for="Input.CityMunicipalityName" class="block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-primary focus:border-primary transition-colors" />
                        <span asp-validation-for="Input.CityMunicipalityName" class="text-red-600 text-sm mt-1"></span>
        </div>
        
        <div>
            <label asp-for="Input.BarangayName" class="block text-sm font-medium text-gray-700 mb-1"></label>
                        <input asp-for="Input.BarangayName" class="block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-primary focus:border-primary transition-colors" />
                        <span asp-validation-for="Input.BarangayName" class="text-red-600 text-sm mt-1"></span>
                    </div>
                </div>
    </div>
</div>
    
        <div class="flex justify-end pt-3">
            <button type="submit" class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm 
                font-medium text-white bg-primary hover:bg-primaryDark focus:outline-none focus:ring-2 
                focus:ring-offset-2 focus:ring-primary transition-all duration-200">
            <i class="fas fa-save mr-2"></i> Save Changes
        </button>
    </div>
</form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        // Preview profile photo before upload
        document.addEventListener('DOMContentLoaded', function() {
            const fileInput = document.getElementById('Input_ProfilePhoto');
            if (fileInput) {
                fileInput.addEventListener('change', function() {
                    if (this.files && this.files[0]) {
                        const reader = new FileReader();
                        reader.onload = function(e) {
                            const previewImg = document.getElementById('profile-image-preview');
                            if (previewImg) {
                                previewImg.src = e.target.result;
                            } else {
                                const container = document.querySelector('.rounded-full');
                                container.innerHTML = '';
                                const newImg = document.createElement('img');
                                newImg.src = e.target.result;
                                newImg.id = 'profile-image-preview';
                                newImg.className = 'w-full h-full object-cover';
                                container.appendChild(newImg);
                            }
                        };
                        reader.readAsDataURL(this.files[0]);
                    }
                });
            }
            
            // Add subtle entrance animations
            const cards = document.querySelectorAll('.hover-lift');
            cards.forEach((card, index) => {
                card.style.opacity = '0';
                card.style.transform = 'translateY(10px)';
                setTimeout(() => {
                    card.style.transition = 'opacity 400ms, transform 400ms';
                    card.style.opacity = '1';
                    card.style.transform = 'translateY(0)';
                }, 100 + (index * 100));
            });
        });
    </script>
}
