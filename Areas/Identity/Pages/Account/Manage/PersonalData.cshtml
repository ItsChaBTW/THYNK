@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<div class="space-y-6">
    <div class="flex items-center justify-between">
        <h3 class="text-lg font-medium text-gray-800 flex items-center">
            <i class="fas fa-database text-primary mr-2"></i>
            <span>Personal Data Management</span>
        </h3>
    </div>
    
    <div class="bg-blue-50 border-l-4 border-blue-400 p-4 rounded-md text-sm text-blue-700 mb-6">
        <div class="flex">
            <div class="flex-shrink-0">
                <i class="fas fa-info-circle mt-0.5"></i>
            </div>
            <div class="ml-3">
                <p>Your account contains personal data that you have provided to us. This page allows you to manage that data.</p>
            </div>
        </div>
    </div>
    
    <div class="bg-white rounded-lg border border-gray-200 overflow-hidden">
        <div class="p-5 border-b border-gray-200">
            <h4 class="text-base font-medium text-gray-700">Download Your Data</h4>
            <p class="mt-1 text-sm text-gray-500">Download a copy of all the personal data we have stored about your account.</p>
        </div>
        <div class="p-5 bg-gray-50">
            <form id="download-data" asp-page="DownloadPersonalData" method="post">
                <button type="submit" class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-primary hover:bg-primaryDark focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary transition-all duration-200">
                    <i class="fas fa-download mr-2"></i>
                    Download Data
                </button>
            </form>
        </div>
    </div>
    
    <div class="bg-white rounded-lg border border-gray-200 overflow-hidden">
        <div class="p-5 border-b border-gray-200">
            <h4 class="text-base font-medium text-gray-700">Delete Your Data</h4>
            <p class="mt-1 text-sm text-gray-500">Permanently delete your account and remove all your data from our systems.</p>
        </div>
        <div class="p-5 bg-gray-50">
            <div class="bg-red-50 border-l-4 border-red-400 p-4 rounded-md mb-4">
                <div class="flex">
                    <div class="flex-shrink-0">
                        <i class="fas fa-exclamation-triangle text-red-500"></i>
                    </div>
                    <div class="ml-3">
                        <p class="text-sm text-red-700 font-medium">Warning: This action cannot be undone</p>
                        <p class="text-sm text-red-600 mt-1">Deleting your data will permanently remove your account and all associated information.</p>
                    </div>
                </div>
            </div>
            <a id="delete" asp-page="DeletePersonalData" class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-all duration-200">
                <i class="fas fa-trash-alt mr-2"></i>
                Delete Account
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
