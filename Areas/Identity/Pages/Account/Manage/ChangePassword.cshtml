@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<div class="space-y-6">
    <div class="flex items-center justify-between">
        <h3 class="text-lg font-medium text-gray-800 flex items-center">
            <i class="fas fa-key text-primary mr-2"></i>
            <span>Password Security</span>
        </h3>
    </div>
    
    <partial name="_StatusMessage" for="StatusMessage" />
    
    <div class="bg-white rounded-lg border border-gray-200 overflow-hidden hover-lift">
        <div class="p-5 border-b border-gray-200">
            <h4 class="text-base font-medium text-gray-700">Update Your Password</h4>
            <p class="mt-1 text-sm text-gray-500">Choose a strong, unique password to protect your account</p>
        </div>
        <div class="p-5">
            <form id="change-password-form" method="post" class="space-y-5">
                <div asp-validation-summary="ModelOnly" class="bg-red-50 border-l-4 border-red-400 p-4 rounded-md text-sm text-red-600 mb-4" role="alert"></div>
                
                <div class="space-y-4">
                    <div>
                        <label for="Input_OldPassword" class="block text-sm font-medium text-gray-700 mb-1">Current Password</label>
                        <div class="relative">
                            <input asp-for="Input.OldPassword" class="block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm 
                                focus:outline-none focus:ring-primary focus:border-primary transition-colors" 
                                autocomplete="current-password" aria-required="true" />
                            <span class="absolute inset-y-0 right-0 pr-3 flex items-center text-gray-400">
                                <i class="fas fa-lock"></i>
                            </span>
                        </div>
                        <span asp-validation-for="Input.OldPassword" class="mt-1 text-sm text-red-600"></span>
                    </div>
                    
                    <div>
                        <label for="Input_NewPassword" class="block text-sm font-medium text-gray-700 mb-1">New Password</label>
                        <div class="relative">
                            <input asp-for="Input.NewPassword" class="block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm 
                                focus:outline-none focus:ring-primary focus:border-primary transition-colors" 
                                autocomplete="new-password" aria-required="true" />
                            <span class="absolute inset-y-0 right-0 pr-3 flex items-center text-gray-400">
                                <i class="fas fa-key"></i>
                            </span>
                        </div>
                        <span asp-validation-for="Input.NewPassword" class="mt-1 text-sm text-red-600"></span>
                    </div>
                    
                    <div>
                        <label for="Input_ConfirmPassword" class="block text-sm font-medium text-gray-700 mb-1">Confirm New Password</label>
                        <div class="relative">
                            <input asp-for="Input.ConfirmPassword" class="block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm 
                                focus:outline-none focus:ring-primary focus:border-primary transition-colors" 
                                autocomplete="new-password" aria-required="true" />
                            <span class="absolute inset-y-0 right-0 pr-3 flex items-center text-gray-400">
                                <i class="fas fa-check"></i>
                            </span>
                        </div>
                        <span asp-validation-for="Input.ConfirmPassword" class="mt-1 text-sm text-red-600"></span>
                    </div>
                </div>
                
                <div class="flex justify-end pt-3">
                    <button type="submit" class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm 
                        font-medium text-white bg-primary hover:bg-primaryDark focus:outline-none focus:ring-2 
                        focus:ring-offset-2 focus:ring-primary transition-all duration-200">
                        <i class="fas fa-shield-alt mr-2"></i> Update Password
                    </button>
                </div>
            </form>
        </div>
    </div>
    
    <div class="bg-blue-50 border-l-4 border-blue-400 p-4 rounded-md text-sm text-blue-700">
        <div class="flex">
            <div class="flex-shrink-0">
                <i class="fas fa-info-circle mt-0.5"></i>
            </div>
            <div class="ml-3">
                <p>Strong passwords are at least 8 characters, include uppercase and lowercase letters, numbers, and special characters.</p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
