@inject SignInManager<ApplicationUser> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}

<nav>
    <div class="mb-3 text-xs uppercase tracking-wider text-gray-500 font-medium">Account Settings</div>
    <ul class="space-y-1.5">
        <li>
            <a class="flex items-center py-2.5 px-3.5 rounded-lg transition-all duration-200 @(ManageNavPages.IndexNavClass(ViewContext) == "active" ? "bg-primary/10 text-primary border-l-4 border-primary" : "text-gray-700 hover:bg-gray-100/80 hover:translate-x-1")" 
               id="profile" 
               asp-page="./Index">
                <i class="fas fa-user @(ManageNavPages.IndexNavClass(ViewContext) == "active" ? "text-primary" : "text-gray-500") w-5 text-center mr-2.5"></i>
                <span class="text-sm">Profile</span>
            </a>
        </li>
        <li>
            <a class="flex items-center py-2.5 px-3.5 rounded-lg transition-all duration-200 @(ManageNavPages.EmailNavClass(ViewContext) == "active" ? "bg-primary/10 text-primary border-l-4 border-primary" : "text-gray-700 hover:bg-gray-100/80 hover:translate-x-1")" 
               id="email" 
               asp-page="./Email">
                <i class="fas fa-envelope @(ManageNavPages.EmailNavClass(ViewContext) == "active" ? "text-primary" : "text-gray-500") w-5 text-center mr-2.5"></i>
                <span class="text-sm">Email</span>
            </a>
        </li>
        <li>
            <a class="flex items-center py-2.5 px-3.5 rounded-lg transition-all duration-200 @(ManageNavPages.ChangePasswordNavClass(ViewContext) == "active" ? "bg-primary/10 text-primary border-l-4 border-primary" : "text-gray-700 hover:bg-gray-100/80 hover:translate-x-1")" 
               id="change-password" 
               asp-page="./ChangePassword">
                <i class="fas fa-key @(ManageNavPages.ChangePasswordNavClass(ViewContext) == "active" ? "text-primary" : "text-gray-500") w-5 text-center mr-2.5"></i>
                <span class="text-sm">Password</span>
            </a>
        </li>
        @if (hasExternalLogins)
        {
            <li id="external-logins">
                <a class="flex items-center py-2.5 px-3.5 rounded-lg transition-all duration-200 @(ManageNavPages.ExternalLoginsNavClass(ViewContext) == "active" ? "bg-primary/10 text-primary border-l-4 border-primary" : "text-gray-700 hover:bg-gray-100/80 hover:translate-x-1")" 
                   id="external-login" 
                   asp-page="./ExternalLogins">
                    <i class="fas fa-external-link-alt @(ManageNavPages.ExternalLoginsNavClass(ViewContext) == "active" ? "text-primary" : "text-gray-500") w-5 text-center mr-2.5"></i>
                    <span class="text-sm">External logins</span>
                </a>
            </li>
        }
    </ul>
    
    <div class="my-4 border-t border-gray-200"></div>
    
    <div class="mb-3 text-xs uppercase tracking-wider text-gray-500 font-medium">Security</div>
    <ul class="space-y-1.5">
        <li>
            <a class="flex items-center py-2.5 px-3.5 rounded-lg transition-all duration-200 @(ManageNavPages.TwoFactorAuthenticationNavClass(ViewContext) == "active" ? "bg-primary/10 text-primary border-l-4 border-primary" : "text-gray-700 hover:bg-gray-100/80 hover:translate-x-1")" 
               id="two-factor" 
               asp-page="./TwoFactorAuthentication">
                <i class="fas fa-shield-alt @(ManageNavPages.TwoFactorAuthenticationNavClass(ViewContext) == "active" ? "text-primary" : "text-gray-500") w-5 text-center mr-2.5"></i>
                <span class="text-sm">Two-factor auth</span>
            </a>
        </li>
        <li>
            <a class="flex items-center py-2.5 px-3.5 rounded-lg transition-all duration-200 @(ManageNavPages.PersonalDataNavClass(ViewContext) == "active" ? "bg-primary/10 text-primary border-l-4 border-primary" : "text-gray-700 hover:bg-gray-100/80 hover:translate-x-1")" 
               id="personal-data" 
               asp-page="./PersonalData">
                <i class="fas fa-database @(ManageNavPages.PersonalDataNavClass(ViewContext) == "active" ? "text-primary" : "text-gray-500") w-5 text-center mr-2.5"></i>
                <span class="text-sm">Personal data</span>
            </a>
        </li>
    </ul>
</nav>
