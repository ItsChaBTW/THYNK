@inject SignInManager<ApplicationUser> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}

<nav>
    <ul class="space-y-1">
        <li>
            <a class="flex items-center py-2 px-3 text-sm rounded-md transition-colors @(ManageNavPages.IndexNavClass(ViewContext) == "active" ? "bg-primary text-white font-medium" : "text-gray-700 hover:bg-gray-100")" 
               id="profile" 
               asp-page="./Index">
                <i class="fas fa-user mr-2 @(ManageNavPages.IndexNavClass(ViewContext) == "active" ? "text-white" : "text-gray-500")"></i>
                Profile
            </a>
        </li>
        <li>
            <a class="flex items-center py-2 px-3 text-sm rounded-md transition-colors @(ManageNavPages.EmailNavClass(ViewContext) == "active" ? "bg-primary text-white font-medium" : "text-gray-700 hover:bg-gray-100")" 
               id="email" 
               asp-page="./Email">
                <i class="fas fa-envelope mr-2 @(ManageNavPages.EmailNavClass(ViewContext) == "active" ? "text-white" : "text-gray-500")"></i>
                Email
            </a>
        </li>
        <li>
            <a class="flex items-center py-2 px-3 text-sm rounded-md transition-colors @(ManageNavPages.ChangePasswordNavClass(ViewContext) == "active" ? "bg-primary text-white font-medium" : "text-gray-700 hover:bg-gray-100")" 
               id="change-password" 
               asp-page="./ChangePassword">
                <i class="fas fa-key mr-2 @(ManageNavPages.ChangePasswordNavClass(ViewContext) == "active" ? "text-white" : "text-gray-500")"></i>
                Password
            </a>
        </li>
        @if (hasExternalLogins)
        {
            <li id="external-logins">
                <a class="flex items-center py-2 px-3 text-sm rounded-md transition-colors @(ManageNavPages.ExternalLoginsNavClass(ViewContext) == "active" ? "bg-primary text-white font-medium" : "text-gray-700 hover:bg-gray-100")" 
                   id="external-login" 
                   asp-page="./ExternalLogins">
                    <i class="fas fa-external-link-alt mr-2 @(ManageNavPages.ExternalLoginsNavClass(ViewContext) == "active" ? "text-white" : "text-gray-500")"></i>
                    External logins
                </a>
            </li>
        }
        <li>
            <a class="flex items-center py-2 px-3 text-sm rounded-md transition-colors @(ManageNavPages.TwoFactorAuthenticationNavClass(ViewContext) == "active" ? "bg-primary text-white font-medium" : "text-gray-700 hover:bg-gray-100")" 
               id="two-factor" 
               asp-page="./TwoFactorAuthentication">
                <i class="fas fa-shield-alt mr-2 @(ManageNavPages.TwoFactorAuthenticationNavClass(ViewContext) == "active" ? "text-white" : "text-gray-500")"></i>
                Two-factor authentication
            </a>
        </li>
        <li>
            <a class="flex items-center py-2 px-3 text-sm rounded-md transition-colors @(ManageNavPages.PersonalDataNavClass(ViewContext) == "active" ? "bg-primary text-white font-medium" : "text-gray-700 hover:bg-gray-100")" 
               id="personal-data" 
               asp-page="./PersonalData">
                <i class="fas fa-database mr-2 @(ManageNavPages.PersonalDataNavClass(ViewContext) == "active" ? "text-white" : "text-gray-500")"></i>
                Personal data
            </a>
        </li>
    </ul>
</nav>
